<div class="game" data-for="{% name %}">
    <div class="left">
        <div class="picture" style="background-image: url('{% picture %}')"></div>
        <div class="name">{% name %}</div>
    </div>
    <div class="middle">
        <div class="description">{% description %}</div>
    </div>
    <div class="right">
        <input type="button" class="button buy {% buyable %}" value="{% price %}"/>
        <input type="button" class="button download {% downloadable %}" data-link="{% link %}" value="Download"/>
        <input type="button" class="button install {% installable %}" value="Install"/>
    </div>
</div>
<div id="{% name %}" class="video" style="display: none" data-src="{% video %}">
    <video><source src="" type="video/mp4"></video>
</div>
